<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_viewholder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:minHeight="128dp">

    <!--<FrameLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@drawable/border"-->
        <!--&gt;    &lt;!&ndash;Source: https://stackoverflow.com/questions/8203606/android-how-to-draw-a-border-to-a-linearlayout &ndash;&gt;-->

        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_notification_clear_all"
            android:contentDescription="@string/recipe_viewholder_content_description"/>

        <TextView
            android:id="@+id/recipe_image_alternative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/image_not_available"
            tools:text="@string/image_not_available" />

